[color]
  ui = true

[color "branch"]
  current = bold blue reverse
  local = blue 
  remote = magenta 

[color "diff"]
  meta = white bold
  frag = magenta ul 
  old = red bold
  new = green bold

[color "status"]
  added = blue 
  changed = yellow 
  untracked = white ul

[color "grep"]
  filename = bold yellow reverse
  linenumber = magenta bold 
  match = green reverse bold
  separator = red bold
  selected = white bold
  context = black 
  function = red

[alias]
  a = add 
  chu = add --patch

  s = status --short

  c = commit -m
  ci = commit 
  ca = commit -am
  cs = commit -s
  amend = commit --amend

  co = checkout
  cb = checkout -b

  re = remote
  rv = remote -v
  br = branch
  bv = branch -v

  pl = pull
  pu = push

  reb = rebase
  rebc = rebase --continue
  rebs = rebase --skip

  uns = reset HEAD          # removed from stage

    # log
    l = log --graph --date=short

    changes = log --pretty=format:'[%C(blue)%h%Creset] %C(cyan)%an%Creset %C(yellow)%cr: %C(white)%s' --name-status
    short = log --pretty=format:'[%C(blue)%h%Creset] %C(cyan)%an%Creset %C(yellow)%cr: %C(white)%s'

    changelog = log --pretty=format:' * %C(white)%s'
    lg = log --graph --pretty=format:'[%C(blue)%h%Creset] -%C(red bold)%d%Creset %C(cyan)%an%Creset %C(yellow)%cr: %C(white)%s' --abbrev-commit --date=relative
    summary = log --pretty=format:'[%C(blue)%h%Creset] %C(cyan)%an%Creset %C(yellow)%ar%Creset: %C(white)%s' --stat

    d = diff                  # unstaged
    dc = diff --cached    # staged
    ds = diff --stat # staged
    dlast = diff HEAD~1

  g = grep --break --heading --line-number

