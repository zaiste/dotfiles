[grep]
  lineNumber = true
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[push]
  default = current
[core]
  pager = less -r
  ignorecase = false
  editor = /usr/local/bin/vim
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pull]
  rebase = true
