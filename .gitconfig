[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  a = add 
  ap = add -p
  ci = commit 
  co = checkout
  cs = commit -s
  r = remote
  br = branch

  s = status --short

  # log
  l = log --graph --date=short
  changes = log --pretty=format:\"%Cred%h %Cgreen(%cr) %C(bold blue)<%cn>%Creset %s\" --name-status
  short = log --pretty=format:\"%Cred%h %Cgreen(%cr) \t%C(bold blue):%cn:%Creset %s\"
  changelog = log --pretty=format:\" * %s\"
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue):%an:%Creset' --abbrev-commit --date=relative

