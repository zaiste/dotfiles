[advice]
  pushNonFastForward = false
  statusHints = false

[color]
  ui = true

[color "branch"]
  current = bold blue reverse
  local = blue
  remote = magenta

[color "diff"]
  meta = white bold
  frag = magenta ul
  old = red
  new = green

[color "status"]
  added = blue
  changed = yellow
  untracked = white ul

[color "grep"]
  filename = bold yellow reverse
  linenumber = magenta bold
  match = green reverse bold
  separator = red bold
  selected = white bold
  context = black
  function = red

[alias]
  a = add
  chu = add --patch

  s = status --short

  c = commit
  cm = commit -m
  ci = commit
  ca = commit -am
  cs = commit -s
  amend = commit --amend

  co = checkout
  cb = checkout -b

  re = remote
  rv = remote -v
  br = branch
  bv = branch -v

  pl = pull
  pu = push

  reb = rebase
  rebc = rebase --continue
  rebs = rebase --skip

  uns = reset HEAD          # removed from stage

  # log
  l = log --graph --date=short --decorate

  changes = log --pretty=format:'[%C(blue)%h%Creset] %C(cyan)%an%Creset %C(yellow)%cr: %C(white)%s' --name-status
  los = log --pretty=format:'[%C(blue)%h%Creset] %<(50)%C(white)%s %>(15)%C(cyan)%an%Creset %C(yellow)%cr'

  changelog = log --pretty=format:' * %C(white)%s'
  lof = log --graph --pretty=format:'[%C(blue)%h%Creset] -%C(red bold)%d%Creset %C(cyan)%an%Creset %C(yellow)%cr: %C(white)%s' --abbrev-commit --date=relative
  lol = log --pretty=format:'[%C(blue)%h%Creset] %C(cyan)%an%Creset %C(yellow)%ar%Creset: %C(white)%s' --stat

  d = diff                  # unstaged
  dc = diff --cached    # staged
  ds = diff --stat # staged
  dlast = diff HEAD~1

  g = grep --break --heading --line-number

